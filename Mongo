VALIDATION'S
db.createCollection("posts", {
    validator: {
        $jsonSchema: {
            bsonType: "object",
            required: ["title", "text", "creator", "comments"],
            properties: {
                title: {
                    bsonType: "string",
                    description: "must be a string and required",
                },
                text: {
                    bsonType: "string",
                    description: "must be a string and required",
                },
                creator: {
                    bsonType: "objectId",
                    description: "must be a objectid and required",
                },
                comments: {
                    bsonType: "array",
                    description: "must be a array and required",
                    items: {
                        bsonType: "object",
                        required: ["text", "author"],
                        properties: {
                            text: {
                                bsonType: "string",
                                description: "must be a string and required",
                            },
                            author: {
                                bsonType: "objectId",
                                description: "must be a objectid and required",
                            },
                        },
                    },
                },
            },
        },
    },
});











