db.places.find({location: {$near : {$geometry: {type: "Point", coordinates: [79.9681642, 12.7620382]}, $maxDistance: 3000, $minDistance: 10}}})
db.places.find({$geoWithin: {$geometry: {type: "Polygon", coordinates: [[]]}}})			#here [[%%]] %%= add the polygon p1,p2,p3,p1
db.places.find({ location: { $geoWithin: { $geometry: { type: "Polygon", coordinates: [ [ [80.00, 12.75], [80.01, 12.75], [80.01, 12.76], [80.00, 12.75] ] ] } } } })
